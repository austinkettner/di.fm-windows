<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="Dl.FM.View.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dl.FM.View"
    xmlns:common="using:Dl.FM.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="119" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Background="#212121" BorderThickness="0,0,0,5" BorderBrush="White">
            <Grid Margin="117,0,56,0">
                <Grid HorizontalAlignment="Left">
                    <Image Source="../Assets/HeaderLogo.png" Stretch="None" VerticalAlignment="Center" />
                </Grid>
                <Grid HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="0,0,34,0" LineHeight="30" VerticalAlignment="Center">
                        <Run Text="NOW PLAYING" Foreground="#c3c3c3" FontSize="18" FontWeight="Bold" />
                        <LineBreak />
                        <Run Text="Matt Cerf Envio Feat Jaren - Walk Away (Vocal Mix)" Foreground="White" FontSize="21" FontWeight="Light" />
                    </TextBlock>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Margin="0,0,42,0" Style="{StaticResource PauseIconButtonStyle}" />
                        <Button Style="{StaticResource SearchIconButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Background="#414141">
            <SemanticZoom Padding="0">
                <SemanticZoom.ZoomedInView>
                    <GridView>
                        
                    </GridView>
                </SemanticZoom.ZoomedInView>
            </SemanticZoom>
        </Grid>
        
    </Grid>
    
</common:LayoutAwarePage>
